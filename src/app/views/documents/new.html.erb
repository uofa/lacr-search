<div class="text-center">
  <h1>Upload new document</h1>

  <% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>

  <div class="well center-box-sm">
     <%= form_tag({action: :upload}, multipart: true) do %>

        <%= fields_for :transcription_xml do |t| %>
          <%= t.label :xml, 'XML files' %>
          <%= t.file_field :xml, multiple: true, accept: '.xml' %> <br />
        <% end %>

        <%= fields_for :page_image do |t| %>
          <%= t.label :image, 'Image files' %>
          <%= t.file_field :image, multiple: true, accept: '.tiff, .tif' %> <br />
          <% end %>

        <%= submit_tag "Upload", class: "btn btn-primary btn-block" %>
     <% end %>
  </div>
</div>
